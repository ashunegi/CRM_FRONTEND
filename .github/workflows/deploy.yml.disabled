name: Deploy React App to AWS EC2

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ“¥ Checkout code
        uses: actions/checkout@v2

      - name: ğŸ§° Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'

      - name: ğŸ“¦ Install dependencies
        run: npm install

      - name: ğŸ“„ Create .env file from GitHub Secret
        run: |
          echo "${{ secrets.REACT_ENV }}" > .env

      - name: ğŸ—ï¸ Build React App
        run: npm run build

      - name: ğŸ§¹ Clean target directory on EC2 before deploy
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.EC2_HOST }}
          username: ${{ secrets.EC2_USERNAME }}
          key: ${{ secrets.EC2_KEY }}
          script: |
            sudo rm -rf /var/www/react-app/*
            sudo chown -R $USER:$USER /var/www/react-app

      - name: ğŸš€ Upload build files to EC2 via SCP
        uses: appleboy/scp-action@master
        with:
          host: ${{ secrets.EC2_HOST }}
          username: ${{ secrets.EC2_USERNAME }}
          key: ${{ secrets.EC2_KEY }}
          source: "build"
          target: "/var/www/react-app"
          strip_components: 1

      - name: ğŸ–¥ï¸ Restart Nginx on EC2
        uses: appleboy/ssh-action@master
        with:
          host: ${{ secrets.EC2_HOST }}
          username: ${{ secrets.EC2_USERNAME }}
          key: ${{ secrets.EC2_KEY }}
          script: |
            sudo nginx -t
            sudo systemctl restart nginx
            echo "âœ… Deployed on $(date)"
